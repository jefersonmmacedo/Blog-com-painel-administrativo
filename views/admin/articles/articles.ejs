<%- include('../../partials/header-admin.ejs') %>
<div class="container">

  <%- include('../../partials/head-admin.ejs') %>       
  <div class="categories">
    <h1>Página de  notícias</h1>
    <div class="tabela2">
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Notícia</th>
                <th scope="col">Slug</th>
                <th scope="col">Categoria</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
                <% articles.forEach((article) => { %>
                  <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td><a href="/admin/articles/edit/<%= article.id %>"><button class="btn btn-warning" >Editar</button></a>&nbsp;<form action="/admin/articles/delete" method="POST" style="display: inline;"   onsubmit="confirmar(event, this)"><input type="hidden" name="id" value="<%= article.id %>"> <button class="btn btn-danger">Deletar</button></form></td>
                  </tr>
                    <%  })%>
             
         </tbody>
          </table>
    </div>
  </div>
    <br><br><br><br>
</div>
<%- include('../../partials/footer-admin.ejs') %>
<script>
function confirmar(event, form) {
  event.preventDefault();
  var decisao = confirm('Deseja deletar a categoria?')

  if(decisao) {
   form.submit();
  } 
}
</script>